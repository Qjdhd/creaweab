# ============= KONFIGURASI BACKEND =============
# File ini adalah TEMPLATE - copy menjadi .env dan isi nilainya

# PORT - Port server akan berjalan
PORT=5000

# NODE_ENV - Environment (development, production)
NODE_ENV=development

# CORS_ORIGIN - URL frontend yang diizinkan mengakses API
CORS_ORIGIN=http://localhost:5173

# ============= DATABASE CONFIGURATION =============
# Option 1: Local MongoDB (install MongoDB Community Edition)
MONGODB_URI=mongodb://localhost:27017/streamhub

# Option 2: MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/streamhub?retryWrites=true&w=majority

# Nama database
DATABASE_NAME=streamhub

# ============= JWT CONFIGURATION =============
# Secret key untuk sign JWT token (gunakan string random yang panjang)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345

# JWT expiration (contoh: 7d untuk 7 hari, 24h untuk 24 jam)
JWT_EXPIRATION=7d

# JWT refresh secret
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_too_67890

# ============= BCRYPT CONFIGURATION =============
# Salt rounds untuk hash password (semakin tinggi semakin aman tapi semakin lambat)
BCRYPT_ROUNDS=10

# ============= EMAIL CONFIGURATION (Optional) =============
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============= API KEYS (Optional) =============
# CLOUDINARY_API_KEY=your-cloudinary-key (untuk upload video)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
